<div class="container">
    <div class="row">
      <div class="col s11">
        <br>
        <form action="">
          <div class="input-field">
            <input type="search" id="search" placeholder="Search for classes..." required>
            <i class="material-icons">close</i>
          </div>
        </form>
      </div>
      <div class="col s1">
        <br><br>
        <a href="/classes/add" class="btn-floating btn-large waves-effect waves-light blue"><i class="material-icons">add</i></a>
      </div>
    </div>
    {{#each classes}}
    <div class="row">
      <br>     
      <div class="col s12">
        <div class="card z-depth-3">
          <div class="card-content">
            <span class="card-title">{{title}}<p class="right">{{price}}</p></span>
            <p>{{description}}</p>
          </div>
          <div class="card-content blue">
            <a href="mailto:{{contact_email}}" class="white-text">Email: {{contact_email}}</a>
          </div>
        </div>
      </div>
    </div>
    {{else}}
      <p class="flow-text center">No gigs available</p>
    {{/each}}
</div>